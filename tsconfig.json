{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ES2015",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "./",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "types": [
      "vitest"
    ],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "test"]
}
